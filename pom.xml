  <profiles>
    <!---->
    <profile>
      <id>local</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <!-- Migrator -->
        <liquibase.changeLogFile>db-changelog.xml</liquibase.changeLogFile>
        <liquibase.driver>org.hsqldb.jdbcDriver</liquibase.driver>
        <liquibase.url>jdbc:hsqldb:${project.build.directory}/liquibase/db
        </liquibase.url>
        <liquibase.contexts>!test</liquibase.contexts>
        <liquibase.user>sa</liquibase.user>
        <liquibase.pwd/>
        <liquibase.verbose>false</liquibase.verbose>
        <liquibase.emptyPassword>true</liquibase.emptyPassword>
        <liquibase.dropFirst>true</liquibase.dropFirst>
      </properties>
      <build>
        <defaultGoal>
          clean enforcer:enforce
          compile test-compile
          exec:exec@migrate
          exec:java@app
        </defaultGoal>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.liquibase</groupId>
              <artifactId>liquibase-maven-plugin</artifactId>
              <configuration>
                <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
              </configuration>
            </plugin>
            <plugin>
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>exec-maven-plugin</artifactId>
              <executions>
                <!---->
                <execution>
                  <id>migrate</id>
                  <phase>none</phase>
                  <goals>
                    <goal>exec</goal>
                  </goals>
                  <configuration>
                    <executable>./mvnw</executable>
                    <arguments>
                      <argument>liquibase:update@migrate</argument>
                      <argument>-Plocal</argument>
                    </arguments>
                  </configuration>
                </execution>
                <!---->
                <execution>
                  <id>app</id>
                  <phase>none</phase>
                  <goals>
                    <goal>java</goal>
                  </goals>
                  <configuration>
                    <arguments>
                      <argument>
                        ${project.artifactId}.db.driver=${liquibase.driver}
                      </argument>
                      <argument>
                        ${project.artifactId}.db.url=${liquibase.url}
                      </argument>
                      <argument>
                        ${project.artifactId}.db.user=${liquibase.user}
                      </argument>
                      <argument>
                        ${project.artifactId}.db.pwd=${liquibase.pwd}
                      </argument>
                    </arguments>
                  </configuration>
                </execution>
                <!---->
              </executions>
            </plugin>
          </plugins>
        </pluginManagement>
        <resources>
          <resource>
            <directory>src/main/resources</directory>
            <filtering>true</filtering>
          </resource>
        </resources>
      </build>
      <dependencies>
        <dependency>
          <groupId>org.liquibase</groupId>
          <artifactId>liquibase-core</artifactId>
        </dependency>
        <dependency>
          <groupId>org.hsqldb</groupId>
          <artifactId>hsqldb</artifactId>
        </dependency>
      </dependencies>
    </profile>
    <!---->
    <profile>
      <id>packaging</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <configuration>
              <descriptorRefs>
                <descriptorRef>jar-with-dependencies</descriptorRef>
              </descriptorRefs>
            </configuration>
            <executions>
              <execution>
                <id>assemble-all</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <!---->
    <profile>
      <id>static-analysis</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <defaultGoal>clean validate</defaultGoal>
        <plugins>
          <!-- Static analysis -->
          <plugin>
            <artifactId>maven-checkstyle-plugin</artifactId>
            <configuration>
              <includeTestSourceDirectory>true</includeTestSourceDirectory>
              <sourceDirectories>
                <sourceDirectory>${project.build.sourceDirectory}
                </sourceDirectory>
              </sourceDirectories>
              <includeTestSourceDirectory>true</includeTestSourceDirectory>
            </configuration>
            <executions>
              <execution>
                <phase>validate</phase>
                <goals>
                  <goal>check</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-pmd-plugin</artifactId>
            <executions>
              <execution>
                <phase>validate</phase>
                <goals>
                  <goal>check</goal>
                  <goal>cpd-check</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>com.github.spotbugs</groupId>
            <artifactId>spotbugs-maven-plugin</artifactId>
            <executions>
              <execution>
                <phase>validate</phase>
                <goals>
                  <goal>check</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>license-maven-plugin</artifactId>
            <executions>
              <execution>
                <phase>validate</phase>
                <goals>
                  <goal>check-file-header</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.owasp</groupId>
            <artifactId>dependency-check-maven</artifactId>
            <executions>
              <execution>
                <phase>validate</phase>
                <goals>
                  <goal>check</goal>
                </goals>
                <configuration>
                  <versionCheckEnabled>true</versionCheckEnabled>
                  <failBuildOnCVSS>0</failBuildOnCVSS>
                  <junitFailOnCVSS>0</junitFailOnCVSS>
                  <failBuildOnAnyVulnerability>
                    true
                  </failBuildOnAnyVulnerability>
                  <failOnError>true</failOnError>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
