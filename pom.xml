    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0</url>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>dhsrocha</id>
      <name>Diego Rocha</name>
      <email>dhsrocha@gmail.com</email>
