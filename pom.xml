  <distributionManagement>
    <site>
      <id>github.com</id>
      <url>gitsite:git@github.com/dhsrocha/template-maven-javalin.git</url>
    </site>
    <!-- TODO: Needs to declare a repository -->
  </distributionManagement>

  <reporting>
